    <script>

        document.addEventListener('DOMContentLoaded', function () {
            var loadingElement = document.getElementById('loading');
            loadingElement.style.display = 'block';

            fetch('/api/MapaMendoza/BuscarDistritos')
                .then(response => {
                    if (!response.ok) throw new Error('Error de Red');
                    return response.json();
                })
                .then(data => {
                    loadingElement.style.display = 'none';

                    // Render referencias por distrito
                    const referenciasList = document.getElementById('referencias-list');
                    referenciasList.innerHTML = '';

                    data.forEach(distrito => {
                        let colorClass = '';
                        if (distrito.nombreDistrito === 'Primer Distrito') colorClass = 'referencia-azul';
                        else if (distrito.nombreDistrito === 'Segundo Distrito') colorClass = 'referencia-celeste';
                        else if (distrito.nombreDistrito === 'Tercer Distrito') colorClass = 'referencia-gris';
                        else if (distrito.nombreDistrito === 'Cuarto Distrito') colorClass = 'referencia-marron';

                        const box = document.createElement('div');
                        box.className = `referencia-box ${colorClass}`;
                        box.innerHTML = `
                    <div>
                        <span style="font-size:1.1rem;">${distrito.nombreDistrito}</span>
                    </div>
                    <div class="mt-2">
                        <span class="label">Obras en ejecución:</span> ${distrito.obrasEjecucion}
                    </div>
                    <div>
                        <span class="label">Obras en licitación:</span> ${distrito.obrasLicitacion}
                    </div>
                    <div>
                        <span class="label">Obras entregadas:</span> ${distrito.obrasEntregadas}
                    </div>
                    <div>
                        <span class="label">Obras paralizadas:</span> ${distrito.obrasParalizadas}
                    </div>
                `;
                        referenciasList.appendChild(box);
                    });
                })
                .catch(error => {
                    loadingElement.style.display = 'none';
                    console.error('Error al obtener los datos:', error);
                });
        });



    </script>


